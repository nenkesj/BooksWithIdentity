@model IEnumerable<HowTo_DBLibrary.Node>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParentNodeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreeLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NodeText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParentNodeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreeLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NodeText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tree.Heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Category)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NodeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NodeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NodeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
