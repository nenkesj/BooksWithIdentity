@model HowTo_DBLibrary.Node

@{
    ViewData["Title"] = "Admin: New Book";
}
<div class="contain1">
    <h1>New Book</h1>
    @Html.ActionLink("Return to List", "Index", "Home", new { }, new { @class = "btn btn-info" })
    <hr />
    <div class="row">
        <div class="col-md-10">
            <form asp-action="NewBook" asp-route-id="@Model.NodeId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NodeId" />
                <input type="hidden" asp-for="TreeId" />
                <input type="hidden" asp-for="TypeId" />
                <input type="hidden" asp-for="ParentNodeId" />
                <input type="hidden" asp-for="TreeLevel" />
                <input type="hidden" asp-for="Owner" />
                <div class="form-group">
                    <label asp-for="Heading" class="control-label"></label>
                    <textarea class="form-control" asp-for="Heading"></textarea>
                    <span asp-validation-for="Heading" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NodeText" class="control-label"></label>
                    <textarea class="form-control" asp-for="NodeText" rows="2"></textarea>
                    <span asp-validation-for="NodeText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
