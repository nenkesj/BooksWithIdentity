@model HowTo_DBLibrary.Node

@{
    ViewData["Title"] = "Admin: New Child " + @Model.Heading;
}
<div class="contain1">
    <h1>New Child</h1>
    @Html.ActionLink("Return to Book", "Details", "Books", new { id = @ViewBag.ReturnNode }, new { @class = "btn btn-info" })
    <hr />
    <form asp-action="NewChild" asp-route-id="@Model.NodeId">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="NodeId" />
        <div class="row">
            <div class="col-sm-10">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <h4><label asp-for="Heading" class="control-label"></label></h4>
                    <textarea class="form-control" asp-for="Heading"></textarea>
                    <span asp-validation-for="Heading" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h4><label asp-for="NodeText" class="control-label"></label></h4>
                    <textarea class="form-control" asp-for="NodeText" rows="20"></textarea>
                    <span asp-validation-for="NodeText" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => @Model.ParentNodeId)
            </dt>
            <dd class="col-sm-2">
                @Html.EditorFor(model => @Model.ParentNodeId)
                <span asp-validation-for="ParentNodeId" class="text-danger"></span>
            </dd>
            <dt class="col-sm-1">
                @Html.DisplayNameFor(model => @Model.TreeLevel)
            </dt>
            <dd class="col-sm-2">
                @Html.EditorFor(model => @Model.TreeLevel)
                <span asp-validation-for="TreeLevel" class="text-danger"></span>
            </dd>

        </dl>
        <dl class="row">
            <dt class="col-sm-1">
                @Html.DisplayNameFor(model => @Model.Owner)
            </dt>
            <dd class="col-sm-2">
                @Html.EditorFor(model => @Model.Owner)
                <span asp-validation-for="Owner" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => @Model.Tree)
            </dt>
            <dd class="col-sm-2">
                <select asp-for="TreeId" class="form-control" asp-items="ViewBag.TreeId"></select>
                <span asp-validation-for="TreeId" class="text-danger"></span>
            </dd>
            <dt class="col-sm-1">
                @Html.DisplayNameFor(model => @Model.Type)
            </dt>
            <dd class="col-sm-2">
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </dd>
        </dl>
        <hr />
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
