<nav class="nav">
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-page="/Identity/Index" class="nav-link text-white">
            @User.Identity.Name
        </a>
        <a asp-page="/Identity/SignOut" class="nav-link text-white">
            Sign Out
        </a>
    }
    else
    {
        <a asp-page="/Identity/SignIn/@Url.Action("Index", "Books")" class="nav-link text-white">
            Sign In/Register
        </a>
    }
</nav>