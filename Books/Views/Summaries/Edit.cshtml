@model HowTo_DBLibrary.Summary

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Summary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SummaryId" />
            <div class="form-group">
                <label asp-for="NodeId" class="control-label"></label>
                <select asp-for="NodeId" class="form-control" asp-items="ViewBag.NodeId"></select>
                <span asp-validation-for="NodeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary1" class="control-label"></label>
                <input asp-for="Summary1" class="form-control" />
                <span asp-validation-for="Summary1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <hr />
            <dl class="row">
                <dt class="col-sm-1">
                    @Html.DisplayNameFor(model => @Model.Owner)
                </dt>
                <dd class="col-sm-2">
                    @Html.EditorFor(model => @Model.Owner)
                    <span asp-validation-for="Owner" class="text-danger"></span>
                </dd>
                <dt class="col-sm-1">
                    @Html.DisplayNameFor(model => @Model.Views)
                </dt>
                <dd class="col-sm-2">
                    @Html.EditorFor(model => @Model.Views)
                    <span asp-validation-for="Views" class="text-danger"></span>
                </dd>
            </dl>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
